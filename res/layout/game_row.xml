<?xml version="1.0" encoding="utf-8"?>
<com.example.words.view.GameRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/game_row_background">

    <TextView
        android:id="@+id/opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/text_light" />

    <TextView
        android:id="@+id/opponent_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_light" />
    
    <TextView
        android:id="@+id/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opponent"
        android:layout_alignParentLeft="true"
        android:text="@string/you"
        android:textColor="@color/text_light" />

    <TextView
        android:id="@+id/your_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opponent_score"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_light" />

</com.example.words.view.GameRow>